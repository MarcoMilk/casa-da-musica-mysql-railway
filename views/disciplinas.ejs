<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

  <title>Cadastro de Disciplinas - Casa da Música</title>
  <link rel="stylesheet" href="./css/style__.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css"         rel="stylesheet">
  
</head>
<body>
  <h1>Cadastro de Disciplinas</h1>
  <form action="/add" method="POST">
    <div class="form-group">
      <label for="nome">Nome da Disciplina:</label>
      <input type="text" name="nome" id="nome" placeholder="Nome" required>
      <label for="carga_horaria">Carga Horária:</label>
      <input type="time" name="carga_horaria" id="carga_horaria" required>
      <select type="text" name="turno" id="turno" required>
        <option value="">Turno</option>
        <option value="Manhã">Manhã</option>
        <option value="Tarde">Tarde</option>
        <option value="Noite">Noite</option>
      </select>
    </div>
    <div>
      <select type="text" name="dia_semana" id="dia_semana" required>
        <option value="">Dia da Semana</option>
        <option value="Segunda">Segunda</option>
        <option value="Terça  ">Terça</option>
        <option value="Quarta ">Quarta</option>
        <option value="Quinta ">Quinta</option>
        <option value="Sexta  ">Sexta</option>
        <option value="Sábado ">Sábado</option>
      </select>
      <div class="form-group">
        <textarea 
          name="obs" placeholder="Observação" rows="4"></textarea>
      </div>
    </div>
  </div>
  <button type="submit" id="submit-btn"><i class="fas fa-plus"></i> Cadastrar Disciplina</button>
  <button type="button" onclick="voltarPagina()"><i class="fas fa-arrow-left"></i> Voltar</button>
  </form>

    <!-- Tabela de disciplinas -->
    <div class="table-container">
      <h1>Lista de Disciplinas</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cara Horária</th>
            <th>Turno</th>
            <th>Dia Semana</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% disciplinas.forEach((disciplina) => { %>

          <tr>
            <td><%= disciplina.iddisciplina %></td>
            <td><%= disciplina.nome %></td>
            <td><%= disciplina.carga_horaria %></td>
            <td><%= disciplina.turno %></td>
            <td><%= disciplina.dia_semana %></td>       
            <td>
            <div class="action-buttons">

              <!-- Botão de Editar -->
              <button class="button-update" onclick="openEditModal(<%= disciplina.iddisciplina %>, '<%= disciplina.nome %>','<%= disciplina.carga_horaria %>','<%= disciplina.turno %>','<%= disciplina.dia_semana %>','<%= disciplina.obs %>')"><i class="fas fa-edit"></i> Atualizar</button>
 
               <!-- Botão de Excluir -->
              <button class="button-delete" onclick="openDeleteModal(<%= disciplina.iddisciplina %>)"><i class="fas fa-trash"></i> Excluir</button>
            </div>

            </td>
          </tr>  
        <% }); %>
        </tbody>
      </table>
  </div>

  <!-- Modal de Edição -->
  <div class="modal" id="editModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar disciplina</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form id="editForm" method="POST">
          <div class="modal-body">
            <input type="hidden" id="edit-id" name="iddisciplina">
            <div class="form-group">
              <label>Nome</label>
              <input type="text" id="edit-nome" name="nome" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Carga háraria</label>
              <input type="time" id="edit-carga_horaria" name="carga_horaria" class="form-control" required>
            </div>
            <div class="form-group">
             <label>Turno</label>
             <input type="text" id="edit-turno" name="turno" class="form-control" required>
            </div>
            <div class="form-group">
             <label>Dia da semana</label>
             <input type="text" id="edit-dia_semana" name="dia_semana" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Observação</label>
              <input type="text" id="edit-obs" name="obs" class="form-control">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success"><i class="bi bi-save2"></i> Salvar</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-door-closed"></i> Fechar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal de Exclusão -->
  <div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Excluir disciplina</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <p>Tem certeza de que deseja excluir este disciplina</p>
        </div>
        <div class="modal-footer">
          <form id="deleteForm" method="GET">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>

    // Função para abrir o modal de edição com os dados do disciplina
    function openEditModal(iddisciplina, nome, carga_horaria, turno, dia_semana, obs) {

      $('#edit-id').val(iddisciplina);
      $('#edit-nome').val(nome);
      $('#edit-carga_horaria').val(carga_horaria);
      $('#edit-turno').val(turno);
      $('#edit-dia_semana').val(dia_semana);
      $('#edit-obs').val(obs);
      
      $('#editForm').attr('action', '/update/' + iddisciplina);
      $('#editModal').modal('show');
    }

    // Função para abrir o modal de exclusão
    function openDeleteModal(iddisciplina) {
      $('#deleteForm').attr('action', '/delete/' + iddisciplina);
      $('#deleteModal').modal('show');
    }
  </script>
</body>
</html>

  <!-- JavaScript para conversão da data - desativado por enquanto -->
  <script>
    function formatDate() {
      // Seleciona o elemento <td> que contém a data
      const dataCell = document.getElementById('dataCell');
      const dateStr = dataCell.textContent;

      // Converte para um objeto Date
      const dateObj = new Date(dateStr);

      // Extrai dia, mês e ano
      const day = String(dateObj.getDate()).padStart(2, '0');
      const month = String(dateObj.getMonth() + 1).padStart(2, '0'); // Mês ajustado
      const year = dateObj.getFullYear();

      // Formata a data como DD/MM/YYYY
      const formattedDate = `${day}/${month}/${year}`;

      // Substitui o conteúdo da <td> pela data formatada
      dataCell.textContent = formattedDate;
    }

    // Chama a função de formatação quando a página carrega
    window.onload = formatDate;
  </script>
