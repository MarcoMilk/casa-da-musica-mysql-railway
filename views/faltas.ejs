<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro de Faltas - Casa da Música</title>
  <link rel ="icon" type="image/x-icon" href="https://image/avif,image/webp,image/png,image/svg+xml,image/*;q=0.8,*/*;q=0.5">
  <link rel="stylesheet" type="text/css" href="style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
</head>
<body>
  <h1>Cadastro de Faltas</h1>
    <form action="/add" method="POST">
      <div class="form-group">
        <label for="idAluno">ID do Aluno:</label>
        <input type="number" id="aluno_id" placeholder="ID Aluno" required>
        <label for="idProfessor">ID do Professor:</label>
        <input type="number" id="professor_id" placeholder="ID Professor" required>
      </div>
      <div class="form-group">
        <label for="idDisciplina">ID da Disciplina:</label>
        <input type="number" id="disciplina_id" placeholder="ID Disciplina" required>
        <label for="dataFalta">Data:</label>
        <input type="date" id="data_falta" required>
      </div>

      <div class="form-group">
        <select name="mes_falta" id="mes_falta" required>
          <option value="">Mês</option>
          <option value="Janeiro">Janeiro</option>
          <option value="Fevereiro">Fevereiro</option>
          <option value="Março">Março</option>
          <option value="Abril">Abril</option>
          <option value="Maio">Maio</option>
          <option value="Junho">Junho</option>
          <option value="Julho">Julho</option>
          <option value="Agosto">Agosto</option>
          <option value="Setembro">Setembro</option>
          <option value="Outubro">Outubro</option>
          <option value="Novembro">Novembro</option>
          <option value="Dezembro">Dezembro</option>
        </select>
        <input type="txt" name="obs" placeholder="Observação">
      </div>

      <button type="submit" class="btn btn-success"><i class="bi bi-check2"></i> Incluir</button>
    </form> 

    <h1>Lista de faltas</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Mês da falta</th>
          <th>Ano da falta</th>
          <th>falta(s)</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% faltas.forEach((falta) => { %>

        <tr>
          <td><%= falta.idfalta %></td>
          <td><%= falta.mes_falta %></td>
          <td><%= falta.ano_falta %></td>
          <td><%= falta.falta %></td>
          <td>

          <!-- Botão de Editar -->
          <button class="btn btn-warning" onclick="openEditModal(<%= falta.idfalta %>, '<%= falta.mes_falta %>','<%= falta.ano_falta %>','<%= falta.data_falta %>','<%= falta.falta %>','<%= falta.obs %>')"><i class="bi bi-pencil-fill"></i> Editar</button>
      
          <!-- Botão de Excluir -->
          <button class="btn btn-danger" onclick="openDeleteModal(<%= falta.idfalta %>)"><i class="bi bi-trash"></i> Excluir</button>
          
          </td>
        </tr>  
       <% }); %>
      </tbody>
    </table>

  <!-- Modal de Edição -->
  <div class="modal" id="editModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar faltas</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form id="editForm" method="POST">
          <div class="modal-body">
            <input type="hidden" id="edit-idfalta" name="idfalta">

            <div class="form-group">
              <select name="mes_falta" id="edit-mes_falta" required style="flex: 0.2; margin-left: 10px;">
                <option value="">Mês falta</option>
                <option value="Janeiro">Janeiro</option>
                <option value="Fevereiro">Fevereiro</option>
                <option value="Março">Março</option>
                <option value="Abril">Abril</option>
                <option value="Maio">Maio</option>
                <option value="Junho">Junho</option>
                <option value="Julho">Julho</option>
                <option value="Agosto">Agosto</option>
                <option value="Setembro">Setembro</option>
                <option value="Outubro">Outubro</option>
                <option value="Novembro">Novembro</option>
                <option value="Dezembro">Dezembro</option>
              </select>

            </div>
            <div class="form-group">
              <label>Ano falta</label>
              <input type="number" id="edit-ano_falta" name="ano_falta" class="form-control" required>
            </div>

            <div class="form-group">
              <label>Data falta</label>
              <input type="date" id="edit-data_falta" name="data_falta" class="form-control" required>
            </div>
            <div class="form-group">
              <label>falta</label>
              <input type="number" id="edit-falta" name="falta" min="0" max="100" step=".01" class="form-control">
            </div>
            <div class="form-group">
              <label>Observação</label>
              <input type="text" id="edit-obs" name="obs" class="form-control">
            </div>>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success"><i class="bi bi-save2"></i> Salvar</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-door-closed"></i> Fechar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal de Exclusão -->
  <div class="modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Excluir faltas</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <p>Tem certeza de que deseja excluir esta falta</p>
        </div>
        <div class="modal-footer">
          <form id="deleteForm" method="GET">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>

    // Função para abrir o modal de edição com os dados da falta
    function openEditModal(idfalta, mes_falta, ano_falta, data_falta, falta, obs) {

      $('#edit-idfalta').val(idfalta);

      $('#edit-mes_falta').val(mes_falta);
      $('#edit-ano_falta').val(ano_falta);
      $('#edit-data_falta').val(data_falta);
      $('#edit-falta').val(falta);
      $('#edit-obs').val(obs);

      $('#editForm').attr('action', '/update/' + idfalta);
      $('#editModal').modal('show');
    }

    // Função para abrir o modal de exclusão
    function openDeleteModal(idfalta) {
      $('#deleteForm').attr('action', '/delete/' + idfalta);
      $('#deleteModal').modal('show');
    }
  </script>

</body>
</html>



